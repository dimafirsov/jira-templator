  {
    "manifest_version": 2,
    "name": "SolarWinds Jira Helper",
    "author": "Dima Firsov",
    "short_name": "SWJH",
    "version": "0.1",
    "description" : "Extension that adds templates to Jira items",
    "background": {
      "scripts": [          
          "lib/jquery/jquery-3.2.1.js",
          "js/utils.js",
          "backgroundScript.js"
      ]
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],        
        "js": ["contentScript.js"],
        "run_at": "document_end"
      }
    ],    
    "browser_action": {
      "default_title": "SolarWinds Jira Templator",
      "default_popup": "html/index.html",
      "default_icon": "img/logo.png"
    },
    "permissions": [
      "storage",
      "tabs",
      "activeTab"
    ]
  }